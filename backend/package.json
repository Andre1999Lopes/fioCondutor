{
  "name": "fio-condutor",
  "version": "1.0.0",
  "description": "Sistema de Gestão de Escola de Corte e Costura - Backend API",
  "main": "dist/src/server.js",
  "license": "UNLICENSED",
  "private": true,
  "author": "André Júnior Lopes Cardoso",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node --trace-warnings dist/src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prepare:production": "npm run prisma:generate && npm run prisma:migrate:deploy && npm run prisma:seed",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemon": "^1.19.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node --project prisma/tsconfig.seed.json prisma/seed.ts"
  }
}
